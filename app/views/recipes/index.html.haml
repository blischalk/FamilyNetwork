- model_class = Recipe.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th=t '.actions', :default => t("helpers.actions")

  %tbody
    - @recipes.each do |recipe|
      %tr
        %td= link_to recipe.title, recipe_path(recipe)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_recipe_path(recipe), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), recipe_path(recipe), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_recipe_path, :class => 'btn btn-primary'
