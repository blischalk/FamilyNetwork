- model_class = @profile.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @profile.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @profile.last_name
%p
  %strong= model_class.human_attribute_name(:about) + ':'
  %br
  = @profile.about
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @profile.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), profiles_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_profile_path(@profile), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), profile_path(@profile), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
